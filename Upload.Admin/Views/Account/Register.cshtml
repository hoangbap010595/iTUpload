@model Upload.Admin.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div id="loginbox">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-vertical", role = "form" ,id = "registerform" }))
    {
        @Html.AntiForgeryToken()
        <div class="control-group normal_text"> <h3><img src="~/Img/logo.png" alt="Logo" /></h3></div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on bg_lo"><i class="icon-user"></i></span>
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Username" })
                    <br />@Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on bg_lo"><i class="icon-envelope"></i></span>
                    @Html.TextBoxFor(m => m.Email, new { value = "hoangbap1595@gmail.com", placeholder = "E-mail address" })
                    <br />@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <div class="main_input_box">
                    <span class="add-on bg_lo"><i class="icon-lock"></i></span>
                    @Html.PasswordFor(m => m.Password, new { value = "Omega@111", placeholder = "Password" })
                    <br />@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                 </div>
            </div>
        </div>
        <div class="control-group">
            <div class="controls">     
                <div class="main_input_box">
                    <span class="add-on bg_lo"><i class="icon-lock"></i></span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { value = "Omega@111", placeholder = "Confirm Password" })
                    <br />@Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
            @Html.ValidationSummary()
            <div class="form-actions">
                <span class="pull-left"><a href="/Account/Login" class="flip-link btn btn-success" id="to-login2">&laquo; Quay lại</a></span>
                <span class="pull-right"><button class="btn btn-info" type="submit">Đăng ký</button></span>
            </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
